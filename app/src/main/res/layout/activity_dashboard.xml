<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14"
            android:id="@+id/guideline1"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"
            android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.87"
            android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09"
            android:id="@+id/guidelineLeft"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91"
            android:id="@+id/guidelineRight"/>
    <TextView
            android:text="Day Month Year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline1"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Hello, Bao!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:id="@+id/TextViewGreets" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toTopOf="@+id/guideline1"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="373dp"
            android:alpha="1"
            android:layout_height="52dp"
            android:background="@drawable/mybutton"
            tools:listitem="@layout/table_item"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TextViewGreets"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="294dp"
            android:layout_height="312dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline2"/>

</androidx.constraintlayout.widget.ConstraintLayout>