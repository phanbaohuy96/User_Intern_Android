<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14"
            android:id="@+id/guideline1"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.32"
            android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"
            android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09"
            android:id="@+id/guidelineLeft"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91"
            android:id="@+id/guidelineRight"/>
    <TextView
            android:text="Day Month Year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline1"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="8dp"
            android:layout_marginLeft="32dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Hello, Bao!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:id="@+id/TextViewGreets" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            android:layout_marginLeft="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_height="52dp"
            android:background="@drawable/mybutton"
            tools:listitem="@layout/table_item"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TextViewGreets" android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.027"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/viewPager"
            android:foregroundGravity="center"
            android:layout_centerInParent="true"
            android:overScrollMode="never"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintVertical_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/heavygrey"
          android:alpha="0.5"
          tools:layout_editor_absoluteX="0dp"
          app:layout_constraintTop_toTopOf="@+id/guideline3"
          android:id="@+id/view" android:layout_marginTop="46dp"/>

    <Button
            android:layout_height="74dp"
            android:layout_width="96dp"
            android:text="Add task"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/buttonAddTask"
            android:drawableTop="@drawable/ic_library_add_black_24dp"
            android:padding="13dp"
            android:background="@color/white"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:alpha="0.5"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonAddTable" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/buttonAddTable"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAddTable"/>

    <Button
            android:layout_height="74dp"
            android:layout_width="96dp"
            android:text="Add board"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/buttonAddTable"
            android:drawableTop="@drawable/ic_playlist_add_black_24dp"
            android:padding="13dp"
            android:background="@color/white"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:alpha="0.5"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:layout_height="74dp"
            android:layout_width="96dp"
            android:text="Logout"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/buttonLogout"
            android:drawableTop="@drawable/ic_keyboard_tab_black_24dp"
            android:padding="13dp"
            android:background="@color/white"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:alpha="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonAddTable" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="@+id/buttonAddTable"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAddTable"/>

</androidx.constraintlayout.widget.ConstraintLayout>