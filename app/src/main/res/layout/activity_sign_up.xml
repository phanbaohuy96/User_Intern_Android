<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewmodel" type="com.user.todolist.SignUpActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SignUpActivity">
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guidelineTop"
                app:layout_constraintGuide_percent="0.13"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/guidelineLeft"
                app:layout_constraintGuide_percent="0.08"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/guidelineRight"
                app:layout_constraintGuide_percent="0.92"/>


        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline1"
                app:layout_constraintGuide_percent="0.17"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline5"
                app:layout_constraintGuide_percent="0.38030097"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline6"
                app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline7"
                app:layout_constraintGuide_percent="0.62"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline10"
                app:layout_constraintGuide_percent="0.74"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/guideline8"
                app:layout_constraintGuide_percent="0.92"/>


        <ImageView
                android:layout_width="28dp"
                android:layout_height="23dp" app:srcCompat="@drawable/logo"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/guidelineTop" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline1" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView1"
        />

        <TextView
                android:layout_width="133dp"
                android:layout_height="37dp"
                android:hint="Welcome,"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="1"
                app:layout_constraintTop_toTopOf="@+id/guideline1"
                android:id="@+id/textView1" android:layout_marginTop="20dp"
                android:layout_marginEnd="144dp" app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="sign up to continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@+id/textView1"/>


        <TextView
                android:text="Username"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:id="@+id/textViewU"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                android:layout_marginEnd="208dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>
        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/editTextUSU"
                  android:maxLines="1"
                  android:maxWidth="180sp"
                  android:inputType="text"
                  app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="46dp"
                  app:layout_constraintStart_toStartOf="@+id/textViewU" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textViewU" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
        <TextView
                android:text="Password"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:id="@+id/textViewP"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="46dp"
                  android:id="@+id/editTextPSU"
                  android:maxLines="1"
                  android:maxWidth="180sp"
                  android:inputType="textPassword"
                  app:layout_constraintStart_toStartOf="@+id/textViewP" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textViewP" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/guideline7"/>
        <TextView
                android:text="Confirm password"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:id="@+id/textViewCP"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/editTextCPSU"
                  app:layout_constraintStart_toStartOf="@+id/textViewCP"
                  android:maxLines="1"
                  android:maxWidth="180sp"
                  android:inputType="textPassword"
                  app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                  android:layout_marginEnd="46dp"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textViewCP" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/guideline10"/>
        <Button
                android:text="Get Started"
                android:layout_width="150dp"
                android:textAllCaps="false"
                android:layout_height="60dp"
                android:textSize="14dp"
                android:id="@+id/button2"
                android:drawableRight="@drawable/ic_trending_flat_black_24dp"
                android:padding="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>